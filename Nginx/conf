server {
    listen 80;
    listen [::]:80;

    server_name replace-with-your-website.com;
    server_tokens off;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://replace-with-your-website.com$request_uri;
    }
}
